;  *;  * Trinkuhr;  *;  * about_window.pbi;  *Enumeration Gadgets  #ABOUT_IMG_APPICON  #ABOUT_TXT_NAME  #ABOUT_TXT_COPYRIGHT  #ABOUT_BTN_OKEndEnumerationProcedure open_about_window()    If OpenWindow(#ABOUT_WND, 0, 0, 350, 150, "About" + Space(1) + #APP_NAME, #PB_Window_Tool, WindowID(#POPUP_WND))        If CatchImage(#IMAGE_APP, ?APP_ICON)      ImageGadget(#ABOUT_IMG_APPICON, 10, 20, 64, 64, ImageID(#IMAGE_APP), #PB_Image_Border)    EndIf        TextGadget(#ABOUT_TXT_NAME, GadgetX(#ABOUT_IMG_APPICON)+GadgetWidth(#ABOUT_IMG_APPICON)+20, GadgetY(#ABOUT_IMG_APPICON), WindowWidth(#ABOUT_WND)-(GadgetX(#ABOUT_IMG_APPICON)+GadgetWidth(#ABOUT_IMG_APPICON)+30), 25, #APP_NAME + " v " + Str(#APP_MAJOR) + "." + Str(#APP_MINOR) + "." + Str(#APP_MICRO))        TextGadget(#ABOUT_TXT_COPYRIGHT, GadgetX(#ABOUT_TXT_NAME), GadgetY(#ABOUT_TXT_NAME)+GadgetHeight(#ABOUT_TXT_NAME)+10, GadgetWidth(#ABOUT_TXT_NAME), GadgetHeight(#ABOUT_TXT_NAME), Chr(169) + " 2021 by Markus Mueller")        ButtonGadget(#ABOUT_BTN_OK, (350-150)/2, WindowHeight(#ABOUT_WND)-40, 150, 30, "Schließen")      EndIf  EndProcedure; IDE Options = PureBasic 5.73 LTS (Windows - x64); CursorPosition = 21; Folding = -; EnableXP; EnablePurifier; EnableCompileCount = 0; EnableBuildCount = 0; EnableExeConstant