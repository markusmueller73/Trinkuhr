lerElse      Debug "Info from '" + #PB_Compiler_Filename + "': " + message    CompilerEndIf  CompilerElse    CompilerIf #PB_Compiler_Procedure <> ""      ConsoleError("Info from <" + #PB_Compiler_Procedure + "> : " + message)    CompilerElse      ConsoleError("Info from '" + #PB_Compiler_Filename + "': " + message)    CompilerEndIf  CompilerEndIfEndMacroMacro error ( message , critical = 0 )  CompilerIf #PB_Compiler_Debugger    CompilerIf #PB_Compiler_Procedure <> ""      Debug "Error in function <" + #PB_Compiler_Procedure + "> : " + message    CompilerElse      Debug "Error in file '" + #PB_Compiler_Filename + "': " + message    CompilerEndIf  CompilerElse    CompilerIf #PB_Compiler_Procedure <> ""      ConsoleError("Error in function <" + #PB_Compiler_Procedure + "> : " + message)    CompilerElse      ConsoleError("Error in file '" + #PB_Compiler_Filename + "': " + message)    CompilerEndIf  CompilerEndIf  If critical <> 0 : End critical : EndIfEndMacro;----------------------------------------------------------------------;- > INCLUDES <XIncludeFile "popup_window.pbi"XIncludeFile "pref_window.pbi"XIncludeFile "about_window.pbi"XIncludeFile "data.pbi"; IDE Options = PureBasic 5.73 LTS (Windows - x64); CursorPosition = 46; FirstLine = 18; Folding = -; EnableXP; EnablePurifier; EnableCompileCount = 0; EnableBuildCount = 0; EnableExeConstant